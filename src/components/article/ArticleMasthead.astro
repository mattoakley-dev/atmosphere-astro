---
import Tag from '../../components/tag/Tag.astro';
import { slugify } from '../../js/util';
const { title, author, date, premium, category } = Astro.props;
---

<div class="bg-gradient-to-r from-purple-500 to-blue-500 p-20 mb-4">
	<div class="flex justify-center items-center">
		<div class="w-6/12">
			<h1 class="text-white text-4xl font-bold text-center pb-4">{title}</h1>
			<div>
				{author && <p class="text-white text-center">✍🏻 {author}</p>}
				{date && <p class="text-white text-center">🗓 {date}</p>}
				{premium && <p class="text-white text-center">⭐️ Premuim Article!</p>}
				{category && <p class="text-center"><Tag category={category} link={'/category/' + slugify(category)}/></p>}
			</div>
		</div>
	</div>
</div>