---
const { article } = Astro.props;
const { title, description, date, author } = article.frontmatter;

import { formatDate } from '../../js/util';
---

<a href={article.url} class="block bg-white p-6 rounded-md shadow-md hover:shadow-lg transition duration-300 ease-in-out mt-5 mb-5">
	<h2 class="text-xl font-bold mb-2">{title}</h2>
	<p class="text-gray-500 text-sm mb-2"><span class="font-semibold">🗓 {formatDate(date)}</span></p>
	<p class="text-gray-500 text-sm mb-2"><span class="font-semibold">✍🏻 {author}</span></p>
	<p class="text-gray-800">{description}</p>
</a>