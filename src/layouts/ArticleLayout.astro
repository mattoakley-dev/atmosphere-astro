---
import ArticleMasthead from "../components/article/ArticleMasthead.astro";
import MainLayout from "./MainLayout.astro";
import { formatDate } from '../js/util';

import '../styles/markdown.css'

const { frontmatter } = Astro.props;
const { title, description, author, date, category, premium } = frontmatter;
---

{ <MainLayout title={title} description={description}>
	<ArticleMasthead title={title} author={author} date={formatDate(date)} premium={premium} category={category} isLink={true}></ArticleMasthead>
	<div class="container mx-auto max-w-screen-lg p-4 min-h-screen md-container">
		<slot/>
	</div>
</MainLayout> }